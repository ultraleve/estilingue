{
  "name": "Estilingue",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Open the current site in a lot of diagnostics web-apps.",
  "homepage_url": "http://ultraleve.me",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "persistent": true,
    "scripts": ["js/action.js"]
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Estilingue"
  },
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "options_page": "src/options_custom/index.html"
}